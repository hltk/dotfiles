general {
	colors = true
	interval = 1
}

order += "tztime local"

wireless _first_ {
	format_up = "W: (%quality at %essid) %ip"
	format_down = "W: down"
}

ethernet _first_ {
	format_up = "E: %ip (%speed)"
	format_down = "E: down"
}

battery all {
	format = "%status %percentage %remaining"
}

volume master {
	format = "v: %volume"
	format_muted = "v: muted (%volume)"
	mixer = "Master"
	mixer_idx = 0
}

tztime local {
	format = "%Y-%m-%d %H:%M:%S"
}
