general {
	colors = true
	interval = 1
}

order += "read_file songinfo"
order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "volume master"
order += "tztime local"

read_file songinfo {
	format = "%content"
	path = "/home/hltk/.cache/songinfo"
	color_good = "#FFFFFF"
}

wireless _first_ {
	format_up = "W: (%quality at %essid) %ip"
	format_down = "W: down"
}

ethernet _first_ {
	format_up = "E: %ip (%speed)"
	format_down = "E: down"
}

battery all {
	format = "%status %percentage %remaining"
}

volume master {
	format = "v: %volume"
	format_muted = "v: muted (%volume)"
	mixer = "Master"
	mixer_idx = 0
}

tztime local {
	format = "%Y-%m-%d %H:%M:%S"
}
