#! /bin/sh

# from https://github.com/baskerville/sxhkd/blob/master/examples/notification/sxhkd_notify

[ $# -ne 1 ] && exit 1

status_fifo=$1

{ while read -r line ; do 
    msg=${line#?}
    case $line in
        H*)
            duration=2000
            ;;
        C*)
            duration=4000
            ;;
        T*)
            duration=1000
            ;;
    esac
    notify-send -t $duration "$msg"
done } < "$status_fifo"
